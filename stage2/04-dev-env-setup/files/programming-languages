***REMOVED***

nodejs() {
  # Install NVM to manage Node versions
  curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.5/install.sh | bash
  if ! cat /root/.zshrc | grep -q 'NVM_DIR'; then
    echo 'export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion' >> /root/.zshrc
***REMOVED***
  cat /root/.zshrc
  zsh -c "source /root/.zshrc; nvm install --lts"
***REMOVED***

python() {
  # Install pyenv to manage Python versions
  [ -d /root/.pyenv ] && rm -rf /root/.pyenv
  curl https://pyenv.run | bash

  # Update .bashrc for pyenv
  if ! cat /root/.zshrc | grep -q 'PYENV_ROOT'; then
    echo 'export PYENV_ROOT="$HOME/.pyenv"
    [ -d $PYENV_ROOT/bin ] && export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"' >> /root/.zshrc
***REMOVED***

  if ! cat /root/.zshrc | grep -q 'eval "$(pyenv virtualenv-init -)"'; then
    echo 'eval "$(pyenv virtualenv-init -)"' >> /root/.zshrc
***REMOVED***
***REMOVED***

java() {
  # Install SDKMan to manage JDK versions
  curl -s "https://get.sdkman.io" | bash || true
***REMOVED***

golang() {
  # Install GVM to manage Golang versions
  [ -d /root/.gvm ] && rm -rf /root/.gvm
  bash < <(curl -s -S -L https://raw.githubusercontent.com/moovweb/gvm/master/binscripts/gvm-installer)

  if ! cat /root/.zshrc | grep -q 'source \$HOME/.gvm/scripts/gvm'; then
    echo "source \$HOME/.gvm/scripts/gvm" >> /root/.zshrc
***REMOVED***
***REMOVED***
